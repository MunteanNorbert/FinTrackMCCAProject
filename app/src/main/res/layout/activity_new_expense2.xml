<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/new_expense_item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="New Expense Item"
        android:textColor="@color/blue"
        android:textSize="40sp"
        android:fontFamily="@font/lexend_regular" />

    <EditText
        android:id="@+id/new_expense_item_title2"
        android:layout_width="300dp"
        android:layout_height="57dp"
        android:hint="Expense Item Title"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:paddingStart="12dp"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:fontFamily="@font/lexend_light"
        android:inputType="text"
        android:background="@drawable/edittext_rounded_background"
        android:layout_below="@id/new_expense_item2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/new_expense_item_date2"
        android:layout_width="300dp"
        android:layout_height="57dp"
        android:hint="Expense Item Date"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:paddingStart="12dp"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:fontFamily="@font/lexend_light"
        android:inputType="text"
        android:background="@drawable/edittext_rounded_background"
        android:layout_below="@id/new_expense_item_title2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/new_expense_item_price2"
        android:layout_width="300dp"
        android:layout_height="57dp"
        android:hint="Expense Item Price"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:paddingStart="12dp"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:fontFamily="@font/lexend_light"
        android:inputType="numberDecimal"
        android:background="@drawable/edittext_rounded_background"
        android:layout_below="@id/new_expense_item_date2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Spinner
        android:id="@+id/spinner_expense_group2"
        android:layout_width="300dp"
        android:layout_height="57dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/new_expense_item_price2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/spinner_rounded_background"
        android:entries="@array/expenseGroups" />

    <ImageView
        android:id="@+id/new_expense_item_image2"
        android:layout_width="300dp"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/spinner_expense_group2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/new_expense_add_image2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Add Image"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:fontFamily="@font/lexend_light"
        android:background="@drawable/button_rounded_background"
        android:layout_below="@id/new_expense_item_image2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/add_expense_item2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Add Expense Item"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:fontFamily="@font/lexend_light"
        android:background="@drawable/button_rounded_background"
        android:layout_below="@id/new_expense_add_image2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />
</RelativeLayout>
