<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/statistics_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/blue"
        android:textSize="40sp"
        android:fontFamily="@font/lexend_regular" />

    <TextView
        android:id="@+id/statistics_item_food"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Food"
        android:background="@drawable/edittext_rounded_background"
        android:layout_below="@id/statistics_item_title"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/blue"
        android:textSize="30sp"
        android:fontFamily="@font/lexend_regular" />

    <TextView
        android:id="@+id/statistics_item_accommodation"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Accommodation"
        android:background="@drawable/edittext_rounded_background"
        android:layout_below="@id/statistics_item_food"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/blue"
        android:textSize="30sp"
        android:fontFamily="@font/lexend_regular" />

    <TextView
        android:id="@+id/statistics_item_transport"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Transport"
        android:background="@drawable/edittext_rounded_background"
        android:layout_below="@id/statistics_item_accommodation"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/blue"
        android:textSize="30sp"
        android:fontFamily="@font/lexend_regular" />

    <TextView
        android:id="@+id/statistics_item_entertainment"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Entertainment"
        android:background="@drawable/edittext_rounded_background"
        android:layout_below="@id/statistics_item_transport"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/blue"
        android:textSize="30sp"
        android:fontFamily="@font/lexend_regular" />

</RelativeLayout>
